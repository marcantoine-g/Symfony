{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="text-center" style="margin : 5rem">
    <div style="margin: 5rem">
        <h1 class="h1">Inscrivez-vous</h1>
        <p>Bienvenue sur le site Alternatives Pro, nous vous invitons à compléter les éléments suivants pour mieux personnaliser nos échanges.</p>
    </div>
    <div class="form-sign">
    {{ form_start(registrationForm) }}
        <div>
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
        </div>
        <button class="btn btn-primary">Valider</button>
    {{ form_end(registrationForm) }}
    </div>
</div>
<style>
label{
    display: block;
    margin: 1rem;
    font-weight: bold;
}
button {
    margin: 1rem;
}
</style>
{% endblock %}
